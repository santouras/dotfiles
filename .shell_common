# common betwen zsh and bash

# what OS are we using
case "$OSTYPE" in
  darwin*)  OS="OSX" ;; 
  linux*)   OS="LINUX" ;;
esac

export EDITOR=vim

export PATH=~/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/local/mysql/bin:$PATH
# envswitch
if command -v envswitch > /dev/null
then
  eval "$(envswitch -I)"
fi

# BASE16 SHELL
BASE16_SHELL=$HOME/.config/base16-shell/
[ -n "$PS1" ] && [ -s $BASE16_SHELL/profile_helper.sh ] && eval "$($BASE16_SHELL/profile_helper.sh)"

# rbenv
if [ -d ~/.rbenv ]
then
  eval "$(rbenv init -)"
fi

# nvm
if [ -d ~/.nvm ]
then
  export NVM_DIR="$HOME/.nvm"
  [ -s "/usr/local/opt/nvm/nvm.sh" ] && . "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/usr/local/opt/nvm/etc/bash_completion" ] && . "/usr/local/opt/nvm/etc/bash_completion"  # This loads nvm bash_completion
fi

# FZF
export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'

# GBT
if [ -f ~/gbt.sh ];then
  . ~/gbt.sh
fi

# if we have something special to this machine
if [ -f ~/.shell_local ];then
  . ~/.shell_local
fi


# AWS CLI settings
export AWS_PAGER=
export AWS_CLI_AUTO_PROMPT=on-partial

