# common betwen zsh and bash

# what OS are we using
case "$OSTYPE" in
  darwin*)  OS="OSX" ;; 
  linux*)   OS="LINUX" ;;
esac

export EDITOR=vim

# if we have something special to this machine
if [ -f ~/.shell_local ];then
  . ~/.shell_local
fi

# Customize to your needs...
MYSQL=/usr/local/mysql/bin
export PATH=$PATH:$MYSQL
export DYLD_LIBRARY_PATH=/usr/local/mysql/lib:$DYLD_LIBRARY_PATH

export PATH=~/.rbenv/shims:~/.rbenv/bin:~/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/opt/X11/bin:/usr/local/mysql/bin:$PATH

# envswitch
if command -v envswitch > /dev/null
then
  eval "$(envswitch -I)"
fi

