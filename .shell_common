# common betwen zsh and bash

# what OS are we using
case "$OSTYPE" in
  darwin*)  OS="OSX" ;; 
  linux*)   OS="LINUX" ;;
esac

export EDITOR=vim

# if we have something special to this machine
if [ -f ~/.shell_local ];then
  . ~/.shell_local
fi

export PATH=~/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/opt/X11/bin:/usr/local/mysql/bin:$PATH
# envswitch
if command -v envswitch > /dev/null
then
  eval "$(envswitch -I)"
fi

# BASE16 SHELL
BASE16_SHELL=$HOME/.config/base16-shell/
[ -n "$PS1" ] && [ -s $BASE16_SHELL/profile_helper.sh ] && eval "$($BASE16_SHELL/profile_helper.sh)"

# rbenv
if [ -d ~/.rbenv ]
then
  export PATH=~/.rbenv/shims:~/.rbenv/bin:$PATH
  eval "$(rbenv init -)"
  if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi
fi

# FZF
export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'
